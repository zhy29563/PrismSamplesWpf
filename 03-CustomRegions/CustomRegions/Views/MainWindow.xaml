<Window x:Class="CustomRegions.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="600">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="40">Customed StackPanel Region</TextBlock>
        <Border  Margin="3" BorderBrush="Orange" BorderThickness="2">
            <StackPanel prism:RegionManager.RegionName="ContentRegion"/>
        </Border>
    </DockPanel>
</Window>
